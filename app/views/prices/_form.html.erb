<%= simple_form_for(@price) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.association :supplier %>
    <%= f.input :comment %>
    <%= f.input :hide %>
    <%= f.input :notes_invisible %>
    <% editable_fields.each do |k, v| %>
      <%= f.input "def_#{v}" %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
