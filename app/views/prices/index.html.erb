<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <p id="notice"><%= notice %></p>

      <h1>Listing Prices</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Count</th>
            <th>Imported at</th>
            <th colspan="5"></th>
          </tr>
        </thead>

        <tbody>
          <% @prices.each do |price| %>
            <tr>
              <td><%= price.title %></td>
              <td><%= $redis.scard("price:#{price.id}") %></td>
              <td><%= price.imported_at %></td>
              <td><%= link_to 'Cleanup', cleanup_price_path(price), method: :post %></td>
              <td><%= link_to 'List', list_price_path(price) %></td>
              <td><%= link_to 'Show', price %></td>
              <td><%= link_to 'Edit', edit_price_path(price) %></td>
              <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Price', new_price_path %>

    </div>
  </div>
</div>
