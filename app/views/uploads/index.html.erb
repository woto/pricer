<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <p id="notice"><%= notice %></p>

      <h1>Listing Uploads</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Price</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @uploads.each do |upload| %>
            <tr>
              <td>
                <p><%= link_to "ID: #{upload.id}", upload_path(upload) %></p>
                <p><%= upload.original_filename %></p>
                <p><input type="text" value="<%= upload.price.path %>"></p>
                <p><%= link_to 'Техн. просмотр', head_upload_path(upload) %></p>
                <p><%= link_to_if upload.job_type == 'format', 'Просмотр прайса', preview_upload_path(upload) %></p>
                <p><%= link_to "Скачать", upload.price.url %></p>
              </td>
              <td>
                <dl>
                  <dt>File Size</dt>
                  <dd><%= upload.file_size %></dd>
                  <dt>Word Count</dt>
                  <dd><%= upload.wc %></dd>
                  <dt>Content Type</dt>
                  <dd><%= upload.content_type %></dd>
                  <dt>Notes</dt>
                  <dd><%= upload.notes %></dd>
                  <dt>Command</dt>
                  <dd><%= upload.command %></dd>
                </dl>
              </td>
              <td><%= link_to 'Show', upload %></td>
              <td><%= link_to 'Edit', edit_upload_path(upload) %></td>
              <td><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
